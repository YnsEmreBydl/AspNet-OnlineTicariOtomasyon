@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "cariSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>YAPILAJ SATIŞLAR</h1> <span>MÜŞTERİ: @ViewBag.must</span>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>PERSONEL</th>
        <th>FİYAT</th>
        <th>ADET</th>
        <th>TOPLAM TUTAR</th>
        <th>TARİH</th>
        <th>YAZDIR</th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisID</td>
            <td>@item.Urunler.Urun_ad</td>
            <td>@item.Personel.Personel_ad  &nbsp; @item.Personel.Personel_soyad</td>
            <td>@item.Fiyat</td>
            <td>@item.Adet</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>
            <td><a href="/Cari/cariDetay/@item.SatisID" class="btn btn-info">YAZDIR</a></td>
       
        </tr>
    }
</table>
