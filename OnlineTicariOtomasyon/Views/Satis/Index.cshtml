@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>SATIŞ LİSTESİ</h1>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>ÜRÜN</th>
            <th>MÜŞTERİ</th>
            <th>PERSONEL</th>
            <th>FİYAT</th>
            <th>ADET</th>
            <th>TOPLAM TUTAR</th>
            <th>TARİH</th>
            <th>DÜZENLE</th>


        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SatisID</td>
            <td>@item.Urunler.Urun_ad</td>
            <td>@item.Cariler.Cari_ad  &nbsp; @item.Cariler.Cari_soyad</td>
            <td>@item.Personel.Personel_ad  &nbsp; @item.Personel.Personel_soyad</td>
            <td>@item.Fiyat</td>
            <td>@item.Adet</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>
            <td><a href="/Satis/satisGetir/@item.SatisID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Satis/satisYap/" class="btn btn-success">Yeni Satış Yap</a>


