@using OnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "departmanSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>DEPARTMAN SATIŞ</h1> <span> Personel: @ViewBag.per</span>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MÜŞTERİ</th>
        <th>ADET</th>
        <th>FİYAT</th>
        <th>TOPLAM TUTAR</th>
        <th>TARİH</th>
        <th>YAZDIR</th>



    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.SatisID</td>
    <td>@item.Urunler.Urun_ad</td>
    <td>@item.Cariler.Cari_ad</td>
    <td>@item.Adet</td>
    <td>@item.Fiyat</td>
    <td>@item.ToplamTutar</td>
    <td>@item.Tarih</td>
    <td><a href="#" class="btn btn-info">YAZDIR</a></td>


</tr>
    }
</table>
